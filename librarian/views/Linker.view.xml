<?xml version="1.0"?>
<mvc:View
	xmlns="sap.m"
	xmlns:template="sap.ui.core.template"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	controllerName="librarian.controllers.Linker">
	<Page
		title="{i18n&gt;linker.title}" 
		showNavButton="true"
		navButtonPress="onNavBack">
		<content>
			<Panel>
				<content>
					<f:Form
						editable="true"
						ariaLabelledBy="linker-title">
						<f:toolbar>
							<Toolbar>
								<Title id="linker-title" text="Linker" />
							</Toolbar>
						</f:toolbar>
						<f:layout>
							<f:ResponsiveGridLayout />
						</f:layout>
						<f:formContainers>
							<f:FormContainer ariaLabelledBy="want-title">
								<f:toolbar>
									<Toolbar>
										<Title id="want-title" text="I want to..." />
									</Toolbar>
								</f:toolbar>
								<f:formElements>
									<f:FormElement label="Dataset Name">
										<f:fields>
											<Input id="dataset" required="true" />
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Destination">
										<f:fields>
											<Select
												forceSelection="true"
												icon="sap-icon://filter"
												autoAdjustWidth="true">
												<core:Item key="analyst" text="Analyst" />
											</Select>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Submit">
										<f:fields>
											<Button id="submit" type="Submit" text="Submit" press="onSubmit" />
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>